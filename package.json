{
  "name": "web-navigation-container",
  "version": "1.0.0",
  "description": "Electron-based navigation container for web applications",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "check-native": "node check-native.js",
    "setup-native": "cd native && npm install",
    "prebuild": "cd native && npm install && npm run build",
    "prebuild:win": "cd native && npm install && npm run build",
    "prebuild:mac": "cd native && npm install && npm run build",
    "prebuild:linux": "cd native && npm install && npm run build",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "navigation",
    "web-apps"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^24.13.3",
    "fs-extra": "^11.1.1"
  },
  "dependencies": {
    "koffi": "^2.14.1",
    "node-machine-id": "^1.1.12",
    "systeminformation": "^5.0.0"
  },
  "build": {
    "appId": "com.webnavigation.container",
    "productName": "Web Navigation Container",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "configs/**/*",
      "utils/**/*",
      "assets/**/*",
      "native/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "configs/**/*",
      "native/**/*"
    ],
    "afterPack": "./build-hooks.js",
    "win": {
      "target": {
        "target": "dir",
        "arch": [
          "x64"
        ]
      },
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/app-icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/app-icon.png",
      "category": "Utility"
    }
  }
}